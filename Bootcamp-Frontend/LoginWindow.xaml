<Window x:Class="Bootcamp_Frontend.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="InvenPro - Inicio de Sesion" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#00A878"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#7FDED7"/>
        <SolidColorBrush x:Key="LightBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="DarkText" Color="#333333"/>
        <SolidColorBrush x:Key="LightText" Color="#999999"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#E74C3C"/>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#009268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007A5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource LightBackground}" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="#00A878"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="{StaticResource PrimaryGreen}" CornerRadius="20,0,0,20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
                    <Viewbox Width="180" Height="80" Margin="0,0,0,30">
                        <Canvas Width="180" Height="80">
                            <TextBlock Text="InvPro" FontSize="42" FontWeight="Bold" 
                                     Foreground="White" Canvas.Left="0" Canvas.Top="10"/>
                            <Path Data="M 140,20 L 160,10 L 180,20 L 180,40 L 160,50 L 140,40 Z M 160,10 L 160,30" 
                                  Stroke="White" StrokeThickness="3" Fill="Transparent"/>
                            <TextBlock Text="gestor" FontSize="14" Foreground="#7FDED7" 
                                     Canvas.Left="15" Canvas.Top="55"/>
                        </Canvas>
                    </Viewbox>
                    
                    <TextBlock Text="Gestion Inteligente" 
                             FontSize="22" 
                             FontWeight="SemiBold"
                             Foreground="White" 
                             TextAlignment="Center"
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Administra tu inventario de forma eficiente" 
                             FontSize="14" 
                             Foreground="{StaticResource AccentGreen}" 
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,0,0,40"/>
                    
                    <Viewbox Width="140" Height="140" Opacity="0.3">
                        <Path Data="M 50,20 L 70,10 L 90,20 L 90,60 L 70,70 L 50,60 Z M 70,10 L 70,45 M 50,30 L 90,30" 
                              Stroke="White" StrokeThickness="4" Fill="Transparent"/>
                    </Viewbox>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Background="White" CornerRadius="0,20,20,0" Padding="60,40">
                <StackPanel VerticalAlignment="Center">
                    <Button Content="X" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Width="35" Height="35"
                            FontSize="18"
                            Foreground="{StaticResource LightText}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Margin="0,-20,-20,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="17.5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                        <Setter Property="Foreground" Value="{StaticResource ErrorRed}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <TextBlock Text="Iniciar Sesion" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource DarkText}"
                             Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Accede a tu panel de control" 
                             FontSize="14" 
                             Foreground="{StaticResource LightText}"
                             Margin="0,0,0,40"/>
                    
                    <TextBlock Text="Usuario" 
                             FontSize="13" 
                             FontWeight="Medium"
                             Foreground="{StaticResource DarkText}"
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Text=""
                             Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Contrasena" 
                             FontSize="13" 
                             FontWeight="Medium"
                             Foreground="{StaticResource DarkText}"
                             Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" 
                               Style="{StaticResource ModernPasswordBox}"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="ErrorMessageTextBlock" 
                             Text="" 
                             FontSize="12" 
                             Foreground="{StaticResource ErrorRed}"
                             Visibility="Collapsed"
                             Margin="0,5,0,15"
                             TextWrapping="Wrap"/>
                    
                    <CheckBox Content="Recordar sesion" 
                            FontSize="13"
                            Foreground="{StaticResource LightText}"
                            Margin="0,0,0,30">
                        <CheckBox.Resources>
                            <Style TargetType="CheckBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="18" Height="18" 
                                                        BorderBrush="#DDDDDD" 
                                                        BorderThickness="1.5"
                                                        Background="White"
                                                        CornerRadius="3"
                                                        Margin="0,0,8,0">
                                                    <Path x:Name="CheckMark" 
                                                          Data="M 2,5 L 6,9 L 14,1" 
                                                          Stroke="{StaticResource PrimaryGreen}" 
                                                          StrokeThickness="2.5"
                                                          Visibility="Collapsed"/>
                                                </Border>
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </CheckBox.Resources>
                    </CheckBox>
                    
                    <Button Content="Iniciar Sesion" 
                            Style="{StaticResource PrimaryButton}"
                            Click="LoginButton_Click"
                            Margin="0,0,0,20"/>
                    
                    <TextBlock HorizontalAlignment="Center">
                        <Hyperlink Foreground="{StaticResource PrimaryGreen}" 
                                 TextDecorations="None"
                                 FontSize="13">
                            Olvidaste tu contrasena?
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
